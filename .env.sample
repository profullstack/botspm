# bots.pm Environment Variables

# System Configuration
NODE_ENV=development  # Options: development, production
LOG_LEVEL=info  # Options: error, warn, info, debug

# Database Configuration
DATABASE_ENGINE=sqlite3  # Options: sqlite3, better-sqlite3

# Application Paths
DATA_DIR=data  # Directory for storing application data
LOGS_DIR=logs  # Directory for storing logs

# Security
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data  # Used for encrypting sensitive data in the database

# External Tools
FFMPEG_PATH=/usr/bin/ffmpeg  # Path to FFmpeg executable